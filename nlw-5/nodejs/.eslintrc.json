{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-console" : "off",
        "import/extensions" : "off",
        "import/no-unresolved" : "off",
        "class-methods-use-this" : ["error",
            { "exceptMethods":
                ["up", "down"]
            }
        ],
        "camelcase" : [
            "error",
            {
                "allow" : ["updated_at", "created_at"]
            }
        ]
    }
}
